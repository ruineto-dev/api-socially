// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int         @id @default(autoincrement())
  name     String
  email    String      @unique
  password String
  sessions sessions[]
  Post     Post[]
  follower followers[] @relation("follower")
  follows  followers[] @relation("follows")

  @@map("users")
}

model sessions {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  token  String @unique
}

model followers {
  id           Int  @id @default(autoincrement())
  userFollower User @relation(name: "follower", fields: [followerId], references: [id])
  followerId   Int
  userFollows  User @relation(name: "follows", fields: [followsId], references: [id])
  followsId    Int
}

model Post {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  url         String
  description String
  createdAt   DateTime @default(now())

  @@map("posts")
}
